<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="계산기"
            android:layout_margin="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <EditText
            android:id="@+id/screen1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:gravity="right"
            android:textSize="18dp"
            android:layout_margin="10dp" />
        <EditText
            android:id="@+id/screen2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20dp"
            android:gravity="right"
            android:layout_margin="10dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:id="@+id/btn_MC"
            android:layout_width="71dp"
            android:layout_height="match_parent"
            android:text="MC"/>
        <Button
            android:id="@+id/btn_MR"
            android:layout_width="71dp"
            android:layout_height="match_parent"
            android:text="MR"/>
        <Button
            android:id="@+id/btn_Mpls"
            android:layout_width="71dp"
            android:layout_height="match_parent"
            android:text="M+"/>
        <Button
            android:id="@+id/btn_Mmin"
            android:layout_width="71dp"
            android:layout_height="match_parent"
            android:text="M-"/>
        <Button
            android:id="@+id/btn_MS"
            android:layout_width="71dp"
            android:layout_height="match_parent"
            android:text="MS"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:id="@+id/btn_perc"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="%"/>
        <Button
            android:id="@+id/btn_root"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="root"/>
        <Button
            android:id="@+id/btn_power"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="x^2"/>
        <Button
            android:id="@+id/btn_frac"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="1/x"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:id="@+id/btn_CE"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="CE"/>
        <Button
            android:id="@+id/btn_C"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="C"/>
        <Button
            android:id="@+id/btn_bcksp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="back"/>
        <Button
            android:id="@+id/btn_div"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="/"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:backgroundTint="#F4F4F4"
            android:id="@+id/btn_7"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="7"/>
        <Button
            android:backgroundTint="#F4F4F4"
            android:id="@+id/btn_8"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="8"/>
        <Button
            android:backgroundTint="#F4F4F4"
            android:id="@+id/btn_9"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="9"/>
        <Button
            android:id="@+id/btn_mul"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="*"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:backgroundTint="#F4F4F4"
            android:id="@+id/btn_4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="4"/>
        <Button
            android:backgroundTint="#F4F4F4"
            android:id="@+id/btn_5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="5"/>
        <Button
            android:backgroundTint="#F4F4F4"
            android:id="@+id/btn_6"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="6"/>
        <Button
            android:id="@+id/btn_sub"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="-"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:backgroundTint="#F4F4F4"
            android:id="@+id/btn_1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="1"/>
        <Button
            android:backgroundTint="#F4F4F4"
            android:id="@+id/btn_2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="2"/>
        <Button
            android:backgroundTint="#F4F4F4"
            android:id="@+id/btn_3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="3"/>
        <Button
            android:id="@+id/btn_add"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="+"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:backgroundTint="#F4F4F4"
            android:id="@+id/btn_plsmin"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="+/-"/>
        <Button
            android:backgroundTint="#F4F4F4"
            android:id="@+id/btn_0"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="0"/>
        <Button
            android:backgroundTint="#F4F4F4"
            android:id="@+id/btn_dot"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="."/>
        <Button
            android:backgroundTint="#8AA6EB"
            android:id="@+id/btn_equal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="="/>
    </LinearLayout>



</LinearLayout>